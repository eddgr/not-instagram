<!DOCTYPE html>
<html>
  <head>
    <title>NotInstagramApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <a class="navbar-brand" href="<%= root_path %>">Not Instagram</a>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><a class="nav-link" href="<%= users_path %>">User Index</a></li>
        </ul>

          <% if current_user %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
              </li>
              <li class="nav-item"><%= link_to current_user.email, user_path(current_user), class: "nav-link font-weight-bold" %></li>
              <li class="nav-item"><%= link_to "Log Out", log_out_path, class: "nav-link" %></li>
            </ul>
          <% else %>
            <ul class="navbar-nav">
              <li class="nav-item"><%= link_to "Sign up", sign_up_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Log In", log_in_path, class: "btn btn-info" %></li>
            </ul>
          <% end %>

      </nav>
    </header>

    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}", class: "alert alert-info" %>
      <% end %>

      <!--
      <% if flash[:success] %>
        <div class="alert alert-success"><%= flash[:success] %></div>
      <% end %>
      <% if flash[:danger] %>
        <div class="alert alert-danger"><%= flash[:success] %></div>
      <% end %>
      -->

      <%= yield %>
    </div>
  </body>
</html>
