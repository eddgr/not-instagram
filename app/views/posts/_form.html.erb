<%= form_for @post do |f| %>
  <%= f.label :user_id %>
  <%= f.collection_select(:user_id, User.all, :id, :name) %><br>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %><br>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %><br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
