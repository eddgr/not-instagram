<%= form_for @post do |f| %>
  <% if @post.photo.attached? %>
    <%= image_tag @post.photo %><br>
  <% else %>
    <%= f.file_field :photo %><br>
  <% end %><br>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %><br>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %><br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
