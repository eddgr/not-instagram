<h1 class="mt-4 mb-4">Log In</h1>

<%= form_tag sessions_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email], class: "form-control" %><br>
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password], class: "form-control" %><br>
  <%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>
