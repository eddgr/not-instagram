<div class="jumbotron text-center">
<h1><%= @user.name %>'s Profile</h1>
<p><%= @user.email %></p>

Following
<%= link_to @user.following.count, following_path %>
Followers
<%= link_to @user.followers.count, followers_path %>
<br><br>
<%= render 'follow' %>

<% if !session[:user_id].nil? && @user.id == current_user.id %>
<%= link_to 'Edit Profile', edit_user_path, class: "btn btn-primary" %>
<% end %>
</div>

<h4 class="text-center">All Posts</h4>
<div class="row">
  <% @user.posts.order('posts.created_at DESC').each do |post| %>
    <div class="col-4 mb-4">
      <%= link_to image_tag(post.photo, class: "img-fluid", size: "400x400"), post_path(post) %>
    </div>

  <% end %>
</div>
