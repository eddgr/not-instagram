<div class="jumbotron">
<h1><%= @user.name %>'s Profile</h1>
</div>

<h2>All Posts</h2>
<ul>
<% @user.posts.each do |post| %>
  <li><%= link_to post.title, post_path(post) %></li>
<% end %>
</ul>

<%= link_to "Add new post", new_post_path, class: "btn btn-info" %>
<%= link_to 'Edit Profile', edit_user_path, class: "btn btn-primary" %>
<%= link_to 'All Users', users_path, class: "btn btn-secondary" %>
