<h1 class="mt-4 mb-4">Followers</h1>

<ul class="list-group">
  <% @followers.each do |followers| %>
    <li class="list-group-item list-group-item-action border-0"><%= link_to followers.email, followers, class: "text-dark font-weight-bold" %></li>
  <% end %>
</ul>
<%= link_to "Back to profile", @user, class: "btn btn-primary mt-4" %>
