<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h2>There were some errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :name, placeholder: :name, class: "form-control" %><br>
  <%= f.text_field :email, placeholder: :email, class: "form-control" %><br>
  <%= f.password_field :password, placeholder: :password, class: "form-control" %><br>
  <%= f.password_field :password_confirmation, placeholder: :password_confirmation, class: "form-control" %><br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
